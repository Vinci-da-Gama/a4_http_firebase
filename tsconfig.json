{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./app",
		"target": "es5",
		"module": "system",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"removeComments": true,
		"downlevelIteration": true,
		"lib": ["es2015", "es2016", "dom"],
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"types": [
			"core-js"
		]
	},
	"exclude": [
		"node_modules",
		"typings/main",
		"typings/main.d.ts"
	],
	"compileOnSave": false
}